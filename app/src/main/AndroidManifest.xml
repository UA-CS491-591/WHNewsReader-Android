<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flesh.washingtonhearld.app" >

    <application
        android:name="com.flesh.washingtonhearld.app.WashingtonHearldApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.flesh.washingtonhearld.app.Activities.HomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.flesh.washingtonhearld.app.Activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.flesh.washingtonhearld.app.Activities.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name="com.flesh.washingtonhearld.app.Activities.StoryActivity"
            android:label="@string/title_activity_story" >
        </activity>
        <activity
            android:name="com.flesh.washingtonhearld.app.Activities.AuthorActivity"
            android:label="@string/title_activity_author">
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
